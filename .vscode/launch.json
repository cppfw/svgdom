{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug parsesvg",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/samples/parsesvg",
            "args": ["${workspaceFolder}/tests/samples/testdata/mouse.svg"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": ["LD_LIBRARY_PATH=${workspaceFolder}/src"],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_debug"
        }
    ]
}