{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug parsesvg",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/samples/out/dbg/parsesvg",
            "args": ["testdata/six_ball.svg"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/tests/samples/",
            "environment": [{"name": "LD_LIBRARY_PATH", "value":"${workspaceFolder}/src/out/dbg"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_dbg"
        }
    ]
}